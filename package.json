{
  "name": "antd-component-shared",
  "version": "0.1.0",
  "private": true,
  "description": "React component library based on Antd + TypeScript",
  "scripts": {
    "dev": "pnpm --filter @acongmr/antd-components dev",
    "dev:example": "pnpm --filter example dev",
    "build": "pnpm -r --filter \"./packages/**\" build",
    "build:components": "pnpm --filter @acongmr/antd-components build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint packages --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint packages --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "lerna": "lerna",
    "version:patch": "lerna version patch --yes",
    "version:minor": "lerna version minor --yes",
    "version:major": "lerna version major --yes",
    "publish:from-git": "lerna publish from-git --yes",
    "clean": "rimraf **/dist **/node_modules **/.turbo",
    "prepare": "husky install || true",
    "publish:ci": "pnpm clean && pnpm version:patch && pnpm publish:from-git",
    "version:components:patch": "cd packages/components && npm version patch && cd ../..",
    "version:components:minor": "cd packages/components && npm version minor && cd ../..",
    "version:components:major": "cd packages/components && npm version major && cd ../..",
    "version:hooks:patch": "cd packages/hooks && npm version patch && cd ../..",
    "version:hooks:minor": "cd packages/hooks && npm version minor && cd ../..",
    "version:hooks:major": "cd packages/hooks && npm version major && cd ../..",
    "publish:components": "cd packages/components && npm publish && cd ../..",
    "publish:hooks": "cd packages/hooks && npm publish && cd ../..",
    "publish:components:ci": "pnpm build:components && pnpm version:components:patch && pnpm publish:components",
    "publish:hooks:ci": "pnpm version:hooks:patch && pnpm publish:hooks"
  },
  "devDependencies": {
    "lerna": "^8.2.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.28.0"
}
